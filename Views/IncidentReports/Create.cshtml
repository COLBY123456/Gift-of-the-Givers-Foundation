@model WebApplication1.Models.IncidentReport

@{
    ViewData["Title"] = "Report an Incident";
}

<h1>Report an Incident</h1>
<p>Fill out the form below to report a new incident. Your report will help us respond quickly and effectively.</p>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" placeholder="Incident Title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" placeholder="Detailed description of the incident"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Location"></label>
        <input asp-for="Location" class="form-control" placeholder="Location of the incident" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateReported"></label>
        <input asp-for="DateReported" class="form-control" type="date" />
        <span asp-validation-for="DateReported" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Status"></label>
        <input asp-for="Status" class="form-control" placeholder="Status (e.g., Under Review, Resolved)" />
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AssignedTeam"></label>
        <input asp-for="AssignedTeam" class="form-control" placeholder="Assigned Team (e.g., Medical, Logistics)" />
        <span asp-validation-for="AssignedTeam" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PriorityLevel"></label>
        <select asp-for="PriorityLevel" class="form-control">
            <option>High</option>
            <option>Medium</option>
            <option>Low</option>
        </select>
        <span asp-validation-for="PriorityLevel" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit Report</button>
</form>
