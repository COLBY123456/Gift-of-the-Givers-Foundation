@model IEnumerable<WebApplication1.Models.IncidentReport>

@{
    ViewData["Title"] = "Incident Reports";
}

<h1>Incident Reports</h1>
<p>Below is a list of all reported incidents. Our team is actively working to address these situations.</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Location</th>
            <th>Date Reported</th>
            <th>Status</th>
            <th>Priority Level</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var report in Model)
        {
            <tr>
                <td>@report.Title</td>
                <td>@report.Description</td>
                <td>@report.Location</td>
                <td>@report.DateReported.ToShortDateString()</td>
                <td>@report.Status</td>
                <td>@report.PriorityLevel</td>
                <td>
                    <a href="/IncidentReports/Details/@report.Id" class="btn btn-info btn-sm">View</a>
                    <a href="/IncidentReports/Edit/@report.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a href="/IncidentReports/Delete/@report.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a href="/IncidentReports/Create" class="btn btn-primary">Report a New Incident</a>
</p>
