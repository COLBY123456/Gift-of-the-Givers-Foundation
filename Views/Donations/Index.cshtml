@model IEnumerable<WebApplication1.Models.Donation>

@{
    ViewData["Title"] = "Resource Donations";
}

<h1>Resource Donations</h1>
<p>Your contributions make a significant difference in the lives of those affected by disasters and emergencies. Below is a list of all contributions made by generous donors.</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Donor Name</th>
            <th>Resource Type</th>
            <th>Quantity</th>
            <th>Date Donated</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var donation in Model)
        {
            <tr>
                <td>@donation.DonorName</td>
                <td>@donation.ResourceType</td>
                <td>@donation.Quantity</td>
                <td>@donation.DateDonated.ToShortDateString()</td>
                <td>@donation.Status</td>
                <td>
                    <a href="/Donations/Details/@donation.Id" class="btn btn-info btn-sm">View</a>
                    <a href="/Donations/Edit/@donation.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a href="/Donations/Delete/@donation.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a href="/Donations/Create" class="btn btn-success">Make a New Donation</a>
</p>
