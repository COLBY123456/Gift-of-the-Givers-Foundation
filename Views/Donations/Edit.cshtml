@model WebApplication1.Models.Donation

@{
    ViewData["Title"] = "Edit Donation";
}

<h1>Edit Donation</h1>
<p>Update the details of the donation below.</p>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="DonorName"></label>
        <input asp-for="DonorName" class="form-control" />
        <span asp-validation-for="DonorName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ResourceType"></label>
        <input asp-for="ResourceType" class="form-control" />
        <span asp-validation-for="ResourceType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateDonated"></label>
        <input asp-for="DateDonated" class="form-control" type="date" />
        <span asp-validation-for="DateDonated" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DistributionArea"></label>
        <input asp-for="DistributionArea" class="form-control" />
        <span asp-validation-for="DistributionArea" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Status"></label>
        <input asp-for="Status" class="form-control" />
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>