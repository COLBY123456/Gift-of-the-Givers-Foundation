@model WebApplication1.Models.Donation

@{
    ViewData["Title"] = "Delete Donation";
}

<h1>Delete Donation</h1>
<p>Are you sure you want to delete this donation?</p>

<table class="table table-striped">
    <tr>
        <th>Donor Name</th>
        <td>@Model.DonorName</td>
    </tr>
    <tr>
        <th>Resource Type</th>
        <td>@Model.ResourceType</td>
    </tr>
    <tr>
        <th>Quantity</th>
        <td>@Model.Quantity</td>
    </tr>
    <tr>
        <th>Date Donated</th>
        <td>@Model.DateDonated.ToShortDateString()</td>
    </tr>
    <tr>
        <th>Distribution Area</th>
        <td>@Model.DistributionArea</td>
    </tr>
    <tr>
        <th>Status</th>
        <td>@Model.Status</td>
    </tr>
</table>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="/Donations/Index" class="btn btn-secondary">Cancel</a>
</form>
