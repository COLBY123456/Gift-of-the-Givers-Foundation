@model IEnumerable<WebApplication1.Models.Volunteer>

@{
    ViewData["Title"] = "Volunteers";
}

<h1>Our Volunteers</h1>
<p>Below is a list of our dedicated volunteers who are helping us make a difference in the lives of those in need.</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Task Assigned</th>
            <th>Availability</th>
            <th>Region of Service</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var volunteer in Model)
        {
            <tr>
                <td>@volunteer.Name</td>
                <td>@volunteer.Email</td>
                <td>@volunteer.PhoneNumber</td>
                <td>@volunteer.TaskAssigned</td>
                <td>@volunteer.Availability</td>
                <td>@volunteer.RegionOfService</td>
                <td>
                    <a href="/Volunteers/Details/@volunteer.Id" class="btn btn-info btn-sm">View</a>
                    <a href="/Volunteers/Edit/@volunteer.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a href="/Volunteers/Delete/@volunteer.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a href="/Volunteers/Create" class="btn btn-info">Sign Up as a Volunteer</a>
</p>
