@model WebApplication1.Models.Volunteer

@{
    ViewData["Title"] = "Become a Volunteer";
}

<h1>Become a Volunteer</h1>
<p>Complete the form below to join our team of dedicated volunteers.</p>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" placeholder="Your Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" placeholder="Your Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" placeholder="Your Phone Number" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TaskAssigned"></label>
        <input asp-for="TaskAssigned" class="form-control" placeholder="Preferred Task (e.g., Logistics, Medical Assistance)" />
        <span asp-validation-for="TaskAssigned" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Availability"></label>
        <input asp-for="Availability" class="form-control" placeholder="Your Availability (e.g., Weekends, Weekdays)" />
        <span asp-validation-for="Availability" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ExperienceLevel"></label>
        <input asp-for="ExperienceLevel" class="form-control" placeholder="Experience Level (e.g., Beginner, Expert)" />
        <span asp-validation-for="ExperienceLevel" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RegionOfService"></label>
        <input asp-for="RegionOfService" class="form-control" placeholder="Region of Service (e.g., KwaZulu-Natal)" />
        <span asp-validation-for="RegionOfService" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
